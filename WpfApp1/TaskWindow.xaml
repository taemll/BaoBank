                                        <Label Content="Банк получатель:" Padding="10 0" Foreground="#FF777777" Background="{x:Null}"/>
                                        <TextBlock Text="AO Bao Bank" Margin="0 0 0 10" FontSize="20" Padding="10 0" Background="{x:Null}" Foreground="#FF395B65"/>
                                        <Separator></Separator>
                                        <Label Content="БИК:" Foreground="#FF777777" Padding="10 0" Background="{x:Null}"/>
                                        <TextBlock x:Name="rec_bik" Text="BAOKZKA" FontSize="20" Margin="0 0 0 10" Padding="10 0" Background="{x:Null}" Foreground="#FF395B65"/>
                                        <Separator></Separator>
                                        <Label Content="Номер счета:" Padding="10 0" Foreground="#FF777777" Background="{x:Null}"/>
                                        <TextBlock x:Name="rec_num" FontSize="20" Margin="0 0 0 10" Padding="10 0" Background="{x:Null}" Foreground="#FF395B65"/>
                                        <Separator></Separator>
                                        <Label Content="Клиент:" Padding="10 0" Foreground="#FF777777" Background="{x:Null}"/>
                                        <TextBlock x:Name="rec_klient" FontSize="20" Margin="0 0 0 10" Padding="10 0" Background="{x:Null}" Foreground="#FF395B65"/>
                                        <Separator></Separator>
                                        <Label Content="ИИН:" Padding="10 0" Foreground="#FF777777" Background="{x:Null}"/>
                                        <TextBlock x:Name="rec_iin" FontSize="20" Padding="10 0" Background="{x:Null}" Foreground="#FF395B65"/>
                                    </StackPanel>
                                </Grid>
                                <Button x:Name="mb" Grid.Column="3" HorizontalAlignment="Right" Visibility="Visible" VerticalAlignment="Bottom" Content="Вернуться в Мой банк" Click="cb_mb" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF556972" FontWeight="Normal"/>

