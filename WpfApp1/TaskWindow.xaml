                            <Grid x:Name="mybank_page">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="1" Grid.ColumnSpan="2">
                                <Border CornerRadius="15" Margin="10" Grid.Column="1" Grid.ColumnSpan="2" BorderThickness="1">
                                    <Border.Background>
                                        <ImageBrush ImageSource="img/cardbaob.png" Stretch="UniformToFill"/>
                                    </Border.Background>
                                        <StackPanel Orientation="Horizontal" Margin="80 20">
                                            <TextBlock FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="Баланс:" FontWeight="Normal" Foreground="White"  Width="140" Height="36" TextAlignment="Center"/>
