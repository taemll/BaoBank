                        <Image Source="img/history(1).png" Width="100" Height="100" />
                        <TextBlock Text="История" Margin="0,100,0,-100" FontSize="24"></TextBlock>
                    </Grid>
                    <Button.Effect>
                        <DropShadowEffect Opacity="0.6"/>
                    </Button.Effect>
                </Button>

                <Button  Grid.Column="2" Grid.Row="1" Margin="5 5 30 30" Click="Button_Click_6" Foreground="White"  Grid.ColumnSpan="2" Background="#33FFFFFF" BorderBrush="{x:Null}" FontWeight="Bold">
