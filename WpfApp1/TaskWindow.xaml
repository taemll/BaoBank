<Window x:Class="WpfApp1.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="BAO Bank" Height="640" Width="950" Background="{x:Null}">
    <Window.Resources>
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecundaryTextColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="0 0 0 0"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Padding" Value="15 15"/>
            <Setter Property="FontWeight" Value="500"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Century Gothic" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Century Gothic" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Century Gothic" />
            <Setter Property="Cursor" Value="Hand"/>

        </Style>

    </Window.Resources>

    <Grid>
        <Grid Background="#FF2E4554" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="600*"/>
            </Grid.RowDefinitions>
            <!--<StackPanel Grid.Row="0" HorizontalAlignment="Left" Margin="20 0">
                <ComboBox FontSize="15" Width="50">
                    <ComboBoxItem Content="en"/>
                </ComboBox>
            </StackPanel>-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button Content="КОНТАКТЫ" Margin="10 0" FontSize="15" FontWeight="Bold" Background="{x:Null}" Foreground="#FF556771" VerticalAlignment="Center" BorderBrush="{x:Null}" Click="contacts"/>
                <Button x:Name="_myprf" Content="МОЙ ПРОФИЛЬ" Margin="10 0" FontSize="15" FontWeight="Bold" Background="{x:Null}" Foreground="#FF556771" VerticalAlignment="Center" BorderBrush="{x:Null}" Click="my_prfl"/>
            </StackPanel>

            <Button  Width="40" x:Name="arrow"  Click="Comeb" BorderBrush="{x:Null}"  HorizontalAlignment="left" VerticalAlignment="Center" Height="40" Visibility="Hidden"  >
                <Button.Background>
                    <ImageBrush ImageSource="img/left.png"/>
                </Button.Background>
            </Button>

            <Grid x:Name="Menu" Grid.Row="1" >
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF2E4554" Offset="0"/>
                        <GradientStop Color="#FF538F8D" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button  Grid.Column="0" Grid.Row="0" Margin="30 30 5 5" Click="Button_Click_1" Foreground="White" FontSize="24" Grid.ColumnSpan="2"  Background="#33FFFFFF" BorderBrush="{x:Null}" FontWeight="Bold">
                    <Grid>
                        <Image Source="img/credit-card(4).png" Height="100" Width="100" Margin="0,0,200,0" />
                        <TextBlock Margin="115,28,0,10" Text="Мой Банк" FontSize="36"></TextBlock>
                    </Grid>
                    <Button.Effect>
                        <DropShadowEffect Opacity="0.6"/>
                    </Button.Effect>
                </Button>

                <Button x:Name="pay"  Grid.Column="2" Grid.Row="0" Margin="5 30 5 5" Click="Button_Click_2" Foreground="White"  Background="#33FFFFFF" BorderBrush="{x:Null}" FontWeight="Bold">
                    <Grid>
                        <Image Source="img/pay-per-click.png" Height="100" Width="100" />
                        <TextBlock Text="Платежи" Margin="0,100,0,-100" FontSize="24"></TextBlock>
                    </Grid>
                    <Button.Effect>
                        <DropShadowEffect Opacity="0.6"/>
                    </Button.Effect>
                </Button>

                <Button   Grid.Column="4" Grid.Row="0" Margin="5 30 30 5" Click="Button_Click_3" Foreground="White" Background="#33FFFFFF" BorderBrush="{x:Null}"  FontWeight="Bold">
                    <Grid>
                        <Image Source="img/money-transfer.png" Height="100" Width="100" />
                        <TextBlock Text="Переводы" Margin="-5,100,-76,-100" FontSize="24"></TextBlock>
                    </Grid>
                    <Button.Effect>
                        <DropShadowEffect Opacity="0.6"/>
