                            <Grid x:Name="recvisits" Visibility="Hidden" Background="#FFDFDCDC">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="1" Grid.ColumnSpan="2" Background="White">
