                    </Button.Effect>
                </Button>

                <Button  Grid.Column="1" Grid.Row="1" Margin="5 5 5 30" Click="Button_Click_5" Foreground="White"  Background="#33FFFFFF" BorderBrush="{x:Null}" FontWeight="Bold">
