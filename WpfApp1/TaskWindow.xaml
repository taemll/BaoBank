                                        <Border Margin="10 10 0 10" Height="70" CornerRadius="40 0 0 40" BorderBrush="#FF304957" BorderThickness="3,3,0,3">
                                            <TextBlock Text="Bao Bank" FontSize="30" Height="40" Width="400" Margin="20 0" FontWeight="Bold" Foreground="#FF304957"/>
                                        </Border>
                                        <Border Grid.Column="1" Margin="0 10 10 10" Height="70" CornerRadius="0 40 40 00" BorderBrush="#FF304957" BorderThickness="0,3,3,3">
                                            <TextBlock HorizontalAlignment="Right" Height="40" Width="400" Margin="20 0" FontSize="30" FontWeight="Bold" Foreground="#FF304957"/>
                                        </Border>

                                    </Grid>
                                </StackPanel>
                                <StackPanel Grid.Row="1"  Grid.ColumnSpan="3" Grid.Column="1">
                                    <Label Content="Введите номер карты Онай" FontSize="15" Margin="30 10" Foreground="#FF304957"/>
                                    <TextBox x:Name="transport_plt_num" MaxLength="19" Margin="20 0" FontSize="30" FontWeight="Bold" Foreground="#FF395B65" Padding="10,5" UseLayoutRounding="True" Background="{x:Null}" TextAlignment="Center" BorderBrush="#FF304957" SelectionBrush="{x:Null}" BorderThickness="2"/>
                                </StackPanel>
                                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="1" Margin="20 0">
                                    <TextBlock x:Name="transport_plt_balance" Margin="20 55" FontSize="15" Text="Баланс:" FontWeight="Bold"  Foreground="#FF395B65" Padding="10,5" UseLayoutRounding="True" TextAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3">
                                    <Label Content="Введите сумму" FontSize="15" Margin="30 10" Background="{x:Null}" Foreground="#FF304957"/>
                                    <TextBox x:Name="transport_plt_sum" Margin="20 0" FontSize="30" FontWeight="Bold" Foreground="#FF395B65" Padding="10,5" UseLayoutRounding="True" Background="{x:Null}" TextAlignment="Center" BorderBrush="#FF304957" SelectionBrush="{x:Null}" BorderThickness="2"/>
                                </StackPanel>

                                <StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3">
                                    <Button  Margin="20" Height="70" Content="Оплатить" Click="oplatit"  FontSize="30" FontWeight="Bold" Foreground="White" BorderBrush="{x:Null}" OpacityMask="#FF304957" Background="#FF304957">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="40"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                                <Button x:Name="plt" Grid.Column="4" Grid.Row="5" HorizontalAlignment="Right" Visibility="Visible" VerticalAlignment="Bottom" Content="Вернуться в платежи" Click="cb_plat" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF556972" FontWeight="Normal"/>


                            </Grid>

                        </Grid>
